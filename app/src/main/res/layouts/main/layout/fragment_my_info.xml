<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    android:orientation="vertical"
    tools:context=".main.view.MyInfoFragment">

    <LinearLayout
        android:id="@+id/myInfoLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="내정보"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/MyNameLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/myinfo_layout_bouder_up_down"
        android:orientation="horizontal"
        android:padding="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:gravity="left|center"
            android:text="userName"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/myinfo_round_button"
            android:gravity="center"
            android:text="계정정보"
            android:textColor="#ffffff"
            android:textSize="17dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/myInfo_waste_vinyl_record"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/myinfo_layout_bouder_up"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="10dp"
            app:srcCompat="@drawable/edit" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:text="폐비닐 수거기록"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center|right"
            android:paddingRight="20dp"
            android:text=">"
            android:textColor="#B6B6B6"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/myInfo_purchase_records"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/myinfo_layout_bouder_up"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="10dp"
            app:srcCompat="@drawable/shopping_cart" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:text="구매 신청 기록"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center|right"
            android:paddingRight="20dp"
            android:text=">"
            android:textColor="#B6B6B6"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/myInfo_frequently_asked_questions"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/myinfo_layout_bouder_up"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="10dp"
            app:srcCompat="@drawable/conversation" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:text="자주 묻는 질문"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center|right"
            android:paddingRight="20dp"
            android:text=">"
            android:textColor="#B6B6B6"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/myInfo_guide_video"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/myinfo_layout_bouder_up_down"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="10dp"
            app:srcCompat="@drawable/play_button" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:text="가이드 영상 시청"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center|right"
            android:paddingRight="20dp"
            android:text=">"
            android:textColor="#B6B6B6"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>