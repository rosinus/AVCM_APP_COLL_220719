            <TextView
                android:id="@+id/kg6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="3m / 6kg"
                android:textColor="@color/black"
                android:textSize="18dp"
